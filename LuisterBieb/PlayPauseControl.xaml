<UserControl x:Class="LuisterBieb.PlayPauseControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="62" d:DesignWidth="62" Tap="UserControl_Tap">
    
    <Grid x:Name="LayoutRoot">
    	<Grid x:Name="PlayPause" HorizontalAlignment="Center" VerticalAlignment="Top" Height="62" Width="62">

    		<Ellipse HorizontalAlignment="Center" Height="62" VerticalAlignment="Top" Width="62" Stroke="White" StrokeThickness="3"/>
    		<Ellipse x:Name="Play" HorizontalAlignment="Center" Height="62" VerticalAlignment="Top" Width="62" Fill="White">
    			<Ellipse.OpacityMask>
    				<ImageBrush Stretch="Fill" ImageSource="transport.play.png"/>
    			</Ellipse.OpacityMask>
    		</Ellipse>
    		<Ellipse x:Name="Pause" HorizontalAlignment="Center" Height="62" VerticalAlignment="Top" Width="62" Fill="White" Visibility="Collapsed">
    			<Ellipse.OpacityMask>
    				<ImageBrush Stretch="Fill" ImageSource="transport.pause.png"/>
    			</Ellipse.OpacityMask>
    		</Ellipse>

    	</Grid>

    </Grid>
</UserControl>